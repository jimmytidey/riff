package {	import fl.controls.ComboBox;	import fl.data.DataProvider;	import fl.MovieClip;	import flash.display.*;	import flash.utils.*;	import flash.display.Sprite;	import flash.events.*;			public class Combo extends Sprite { 		function make(jsonData, dp, selected_index, bank_index, bank_option_index, cumulatuive_y_offset, _stage) { 			var cb:ComboBox = new ComboBox();			cb.dataProvider = dp;			cb.y = cumulatuive_y_offset;			cb.height = 20;			cb.width = 140;			cb.selectedIndex = selected_index;  						cb.addEventListener(Event.CHANGE, change);						function change() { 				jsonData['banks'][bank_index]['bank_options'][bank_option_index]['file_location'] = cb.selectedLabel;				trace(jsonData['banks'][bank_index]['bank_options'][bank_option_index]);			}						_stage.addChild(cb);		}	}		}