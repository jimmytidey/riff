package {	import fl.controls.ComboBox;	import fl.data.DataProvider;	import flash.display.*;	import flash.display.Sprite;	import flash.events.*;			public class AudioDropDown extends Sprite {						public function make(jsonData, fileList, _stage, grid_top, grid_left) {			var cumulatuive_y_offset:int = grid_top;						var dp:DataProvider = new DataProvider();			for each (file in fileList) { 				dp.addItem({label:file});			}						var bank_index= 0;			for each (var bank:Object in jsonData['banks']) {				var bank_option_index= 0;				for each (var bank_option:Object in bank['bank_options']) {										file_location = jsonData['banks'][bank_index]['bank_options'][bank_option_index]['file_location'];					var combo:Combo = new Combo();					var test_index = 0; 					for each (file in fileList) { 						if (file == file_location) {selected_index = test_index;} 						test_index ++; 					}										combo.make(jsonData, dp, selected_index, bank_index, bank_option_index, cumulatuive_y_offset, _stage);										bank_option_index ++;					cumulatuive_y_offset += 26;				}				bank_index ++; 				cumulatuive_y_offset += 56;			}		}	}}