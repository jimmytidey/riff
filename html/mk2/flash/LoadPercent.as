package {	import flash.MovieClip;	import flash.text.TextField;		import flash.events.*;	public class LoadPercent {		var statusTextField:TextField  = new TextField();		public function LoadPercent(fileMC) { 			statusTextField.x = 20;			fileMC.addChild(statusTextField);		}				public function updatePercent(event:ProgressEvent) { 			var loadTime:Number = event.bytesLoaded / event.bytesTotal;			var loadPercent:uint = Math.round(100 * loadTime);			statusTextField.text = loadPercent;		}	}}